<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:padding="5dp"
       android:id="@+id/rl_1"
       android:layout_width="match_parent"
       android:layout_height="@dimen/y100"
       >
       <ImageView
           android:id="@+id/iv_icon"
           android:layout_width="@dimen/x70"
           android:layout_height="@dimen/x70"
           android:src="@mipmap/ic_launcher"
           />

       <RelativeLayout
           android:layout_toRightOf="@+id/iv_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >

           <TextView
               android:padding="2dp"
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginLeft="14dp"
               android:layout_marginStart="14dp"
               android:text="Text" />

           <TextView

               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/tv_1"
               android:layout_alignStart="@+id/tv_1"
               android:layout_below="@+id/tv_name"
               android:layout_marginLeft="14dp"
               android:layout_marginStart="14dp"
               android:text="time" />
       </RelativeLayout>

       <ImageView
           android:layout_width="@dimen/x70"
           android:layout_height="@dimen/x70"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:src="@mipmap/icon_open" />
   </RelativeLayout>
    <TextView
        android:padding="10dp"
        android:id="@+id/tv_cotent"
        android:layout_below="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cotente"
        />
    <View
        android:layout_below="@+id/tv_cotent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorziti"
        />
</RelativeLayout>