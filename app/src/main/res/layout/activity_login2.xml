<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/raw_1500974387"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_fh1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:padding="5px"
            android:src="@mipmap/raw_1500023215" />

        <TextView
            android:id="@+id/tv_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/colorziti" />
    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@mipmap/raw_1500977101" />

    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/but_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="账号"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#C4C4C4"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="密码"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

        <Button
        android:id="@+id/but_log"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/rl_background"
        android:layout_alignStart="@+id/rl_background"
        android:layout_below="@+id/rl_background"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroup3"
        android:text="登录"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/but_log"
        android:layout_alignRight="@+id/but_log"
        android:layout_below="@+id/but_log"
        android:layout_marginTop="14dp"
        android:text="忘记密码"
        android:textColor="@color/colorziti"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/tv_youke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="游客登录"
        android:textColor="#B5B3A1" />

</RelativeLayout>
