<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lenovo.bount.newsquarter.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/title_layout"
                />

            <FrameLayout
                android:layout_below="@+id/share"
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/y130"
               />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lt1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="@dimen/x70"
                            android:layout_height="@dimen/y70"
                            android:src="@mipmap/one" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="推荐" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lt2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="@dimen/x70"
                            android:layout_height="@dimen/x70"
                            android:src="@mipmap/two" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="段子" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lt3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="@dimen/x70"
                            android:layout_height="@dimen/x70"
                            android:src="@mipmap/thress" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lt4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="@dimen/x70"
                            android:layout_height="@dimen/x70"
                            android:src="@mipmap/find" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现" />
                    </LinearLayout>
                </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/left_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left">
            <include layout="@layout/cehua_layout" />
        </FrameLayout>

    </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

