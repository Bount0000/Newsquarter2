<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lenovo.bount.newsquarter.activitybao.ShipinActivity">
    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y450"
        android:src="@drawable/dongtu"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/leftjiantou" />

        <TextView
            android:id="@+id/iv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x40"
            android:textColor="@color/whiteziti"
            android:text="返回" />

        <TextView
            android:id="@+id/iv_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="@color/whiteziti"
            android:text="拍照" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_alignParentRight="true"
            android:src="@mipmap/zhao" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#A2DEFA"
        android:layout_below="@+id/iv_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/whityuan"
            />

    </RelativeLayout>
</RelativeLayout>
