<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lenovo.bount.newsquarter.LoginActivity">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/beijing1"
       android:scaleType="centerCrop"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp">

        <LinearLayout
            android:id="@+id/lt1"
            android:layout_width="@dimen/x450"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroup"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y80"
                android:layout_marginLeft="@dimen/x85"
                android:background="@drawable/backgroup"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/wx" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="微信登录"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt2"
            android:layout_width="@dimen/x450"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/qqbackgroup"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x85"
                android:background="@drawable/backgroup"
                android:scaleType="centerCrop"
                android:src="@mipmap/qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="QQ登录"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/other_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y25"
            android:text="其他登录方式" />
    </RelativeLayout>

</RelativeLayout>
