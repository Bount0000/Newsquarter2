<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/y10"
        android:id="@+id/rt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天列表"
            />
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/y10"
        android:layout_below="@+id/rt_1"
        android:id="@+id/rt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            />
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/y10"
        android:layout_below="@+id/rt_2"
        android:id="@+id/rt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态"
            />
    </RelativeLayout>
</RelativeLayout>
